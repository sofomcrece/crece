
  <div>
    <a class="waves-effect waves-light btn" href= "/payments/show?clave=<%= @payment.credit.id %>">Atras</a>
  </div>
<h1>Historial de Tickets</h1>

<table>
  <thead>
    <tr>
      <th>Cantidad</th>
      <th>Payment</th>
      <th>Estado</th>
      <th>Fecha Pago</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @tickets.each do |ticket| %>
      <tr>
        
        <td><%= ticket.cantidad %></td>
        <td><%= ticket.payment.id %></td>
        <td><%= ticket.status==0?"aplicable":"No aplicable"%></td>
        <td> <%= Auxiliar.fecha_formato(ticket.updated_at) %></td>
        <td><%= link_to 'Mostrar', ticket %></td>
        <td><%= link_to 'Editar', edit_ticket_path(ticket) %></td>
        <% if current_user.tipo == 1%>
          <td><%= link_to 'Cancelar', cancelar_path(ticket), :method=> :put, :confirm => "Are you sure?"  %></td>
       <%end%>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

