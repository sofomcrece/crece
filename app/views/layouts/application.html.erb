  function obtenerDias(){
    switch($scope.tipo){
      case '0':
        console.log("semana");
        return convertir($scope.semana);
      break;
      case '1':
        console.log("mes");
        var res= convertir($scope.mes);
        if ($scope.fin_de_mes==null)
         return res;
